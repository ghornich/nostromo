{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
        "lib": ["ESNext"],
		"target": "ES2018",
		"esModuleInterop": true,
		"outDir": "./ts-dist",
        "declaration": true,
		"newLine": "lf",
	},
	"include": ["src/", "modules/", "test/", "node_modules/puppeteer/**/*.d.ts"],
	"exclude": ["node_modules/", "modules/**/dist/", "src/recorder/", "dist/", "ts-dist/"]
}
